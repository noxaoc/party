<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/register">
             <div class="form-group">
                <label for="familyNameInput">Фамилия</label>
                <input name="familyName" type="text" class="form-control" id="familyNameInput">
            </div>

            <div class="form-group">
                <label for="firstNameInput">Имя</label>
                <input name="firstName" type="text" class="form-control" id="firstNameInput">
            </div>

            <div class="form-group">
                <label for="secondNameInput">Отчество</label>
                <input name="secondName" type="text" class="form-control" id="secondNameInput">
            </div>

            <div class="form-group">
                <label for="emailInput">Email</label>
                <input name="email" type="email" class="form-control" id="emailInput" placeholder="Введите email">
            </div>

            <div class="form-group">
                <label for="passwordInput">Пароль</label>
                <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Пароль">
            </div>

            <div class="form-group">
                <label for="confirmPasswordInput">Подтверждение пароля</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput" placeholder="Введите повторно пароль">
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>